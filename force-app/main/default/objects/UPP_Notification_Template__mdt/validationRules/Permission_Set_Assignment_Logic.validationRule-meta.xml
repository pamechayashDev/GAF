<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Permission_Set_Assignment_Logic</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISBLANK(TEXT(Evaluate_As__c)), NOT(ISBLANK(Permission_Sets__c)))</errorConditionFormula>
